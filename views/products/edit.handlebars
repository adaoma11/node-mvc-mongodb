<h1>Editar Produto</h1>

<form action="/products/edit" method="post">

    <input type="hidden" name="id" value="{{product._id}}">

    <div class="form-control">
        <label for="nameInput">Nome do produto:</label>
        <input type="text" name="name" id="nameInput" placeholder="Digite o nome do produto" value="{{product.name}}">
    </div>

    <div class="form-control">
        <label for="imageInput">URL da imagem do produto:</label>
        <input type="text" name="image" id="imageInput" placeholder="Digite a URL da imagem do produto" value="{{product.image}}">
    </div>

    <div class="form-control">
        <label for="priceInput">Preço do produto:</label>
        <input type="text" name="price" id="priceInput" placeholder="Digite o preço do produto" value="{{product.price}}">
    </div>

    <div class="form-control">
        <label for="descriptionInput">Descrição:</label>
        <textarea name="description" id="descriptionInput" placeholder="Descrição do produto">{{product.description}}</textarea>
    </div>

    <input type="submit" value="Salvar alterações" class="btn">

</form>